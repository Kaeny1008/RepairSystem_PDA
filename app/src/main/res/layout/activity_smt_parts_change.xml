<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context=".Activity.SMT_Parts_Change"
    >

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/text_border_title"
        android:gravity="center_vertical"
        android:text="자재교환"
        android:textColor="#FFFF"
        android:textSize="35sp"
        android:textStyle="bold" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="15dp" />

    <TextView
        android:id="@+id/tvStatus"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_weight="0"
        android:background="@drawable/text_border_white_back_color"
        android:text="Feeder No.를 스캔하여 주십시오."
        android:gravity="center"
        android:textColor="#000000"
        android:textSize="20sp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvInformation"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@drawable/text_border_subtitle"
                android:gravity="center_vertical"
                android:text="@string/work_information"
                android:textColor="#FFFFFF"
                android:textSize="15sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:background="@drawable/text_border_light_blue"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvWorker"
                    android:layout_width="120dp"
                    android:layout_height="32dp"
                    android:background="@drawable/text_border_blue"
                    android:gravity="center"
                    android:text="@string/worker"
                    android:textColor="#FFFFFF"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/etWorker"
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:layout_weight="0"
                    android:background="@drawable/text_border_light_blue"
                    android:gravity="center"
                    android:textColor="#000000"
                    android:textSize="17sp"
                    android:singleLine="true"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:background="@drawable/text_border_light_blue"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvLotNo"
                    android:layout_width="120dp"
                    android:layout_height="32dp"
                    android:layout_weight="0"
                    android:background="@drawable/text_border_blue"
                    android:gravity="center"
                    android:text="@string/lot_no"
                    android:textColor="#FFFFFF"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/etLotNo"
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:layout_weight="0"
                    android:background="@drawable/text_border_light_blue"
                    android:gravity="center"
                    android:textColor="#000000"
                    android:textSize="17sp"
                    android:singleLine="true"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:background="@drawable/text_border_light_blue"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvWorkMode"
                    android:layout_width="120dp"
                    android:layout_height="32dp"
                    android:layout_weight="0"
                    android:background="@drawable/text_border_blue"
                    android:gravity="center"
                    android:text="@string/work_mode"
                    android:textColor="#FFFFFF"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/etWorkMode"
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:layout_weight="0"
                    android:background="@drawable/text_border_light_blue"
                    android:gravity="center"
                    android:textColor="#000000"
                    android:textSize="17sp"
                    android:singleLine="true"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:background="@drawable/text_border_light_blue"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvORGPartNo"
                    android:layout_width="120dp"
                    android:layout_height="32dp"
                    android:layout_weight="0"
                    android:background="@drawable/text_border_blue"
                    android:gravity="center"
                    android:text="@string/part_no"
                    android:textColor="#FFFFFF"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/etORGPartNo"
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:layout_weight="0"
                    android:background="@drawable/text_border_light_blue"
                    android:gravity="center"
                    android:textColor="#000000"
                    android:textSize="17sp"
                    android:singleLine="true"/>
            </LinearLayout>

            <TextView
                android:id="@+id/tvPartSelect"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@drawable/text_border_subtitle"
                android:gravity="center_vertical"
                android:text="[기존(선택)내용]"
                android:textColor="#FFFFFF"
                android:textSize="15sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:background="@drawable/text_border_light_blue"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvFeederNo"
                    android:layout_width="120dp"
                    android:layout_height="32dp"
                    android:layout_weight="0"
                    android:background="@drawable/text_border_blue"
                    android:gravity="center"
                    android:text="Feeder No."
                    android:textColor="#FFFFFF"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/etFeederNo"
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:layout_weight="0"
                    android:background="@drawable/text_border_light_blue"
                    android:gravity="center"
                    android:textColor="#000000"
                    android:textSize="17sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:background="@drawable/text_border_light_blue"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvUseQty"
                    android:layout_width="120dp"
                    android:layout_height="32dp"
                    android:layout_weight="0"
                    android:background="@drawable/text_border_blue"
                    android:gravity="center"
                    android:text="사용 수량"
                    android:textColor="#FFFFFF"
                    android:textSize="17sp" />

                <EditText
                    android:id="@+id/etUseQty"
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:layout_weight="0"
                    android:background="@drawable/text_border_light_blue"
                    android:gravity="center"
                    android:textColor="#000000"
                    android:inputType="number"
                    android:textSize="17sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:background="@drawable/text_border_light_blue"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvLossQty"
                    android:layout_width="120dp"
                    android:layout_height="32dp"
                    android:layout_weight="0"
                    android:background="@drawable/text_border_blue"
                    android:gravity="center"
                    android:text="Loss 수량"
                    android:textColor="#FFFFFF"
                    android:textSize="17sp" />

                <EditText
                    android:id="@+id/etLossQty"
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:layout_weight="0"
                    android:background="@drawable/text_border_light_blue"
                    android:gravity="center"
                    android:textColor="#000000"
                    android:inputType="number"
                    android:textSize="17sp"/>
            </LinearLayout>

            <TextView
                android:id="@+id/tvPartHistory"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@drawable/text_border_subtitle"
                android:gravity="center_vertical"
                android:text="[교환내용]"
                android:textColor="#FFFFFF"
                android:textSize="15sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:background="@drawable/text_border_light_blue"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvChangePartNo"
                    android:layout_width="120dp"
                    android:layout_height="32dp"
                    android:layout_weight="0"
                    android:background="@drawable/text_border_blue"
                    android:gravity="center"
                    android:text="@string/part_no"
                    android:textColor="#FFFFFF"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/etChangePartNo"
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:layout_weight="0"
                    android:background="@drawable/text_border_light_blue"
                    android:gravity="center"
                    android:textColor="#000000"
                    android:textSize="17sp"
                    android:singleLine="true"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:background="@drawable/text_border_light_blue"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvChangeLotNo"
                    android:layout_width="120dp"
                    android:layout_height="32dp"
                    android:layout_weight="0"
                    android:background="@drawable/text_border_blue"
                    android:gravity="center"
                    android:text="@string/lot_no"
                    android:textColor="#FFFFFF"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/etChangeLotNo"
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:layout_weight="0"
                    android:background="@drawable/text_border_light_blue"
                    android:gravity="center"
                    android:textColor="#000000"
                    android:textSize="17sp"
                    android:singleLine="true"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:background="@drawable/text_border_light_blue"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvChangeQty"
                    android:layout_width="120dp"
                    android:layout_height="32dp"
                    android:layout_weight="0"
                    android:background="@drawable/text_border_blue"
                    android:gravity="center"
                    android:text="@string/qty"
                    android:textColor="#FFFFFF"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/etChangeQty"
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:layout_weight="0"
                    android:background="@drawable/text_border_light_blue"
                    android:gravity="center"
                    android:textColor="#000000"
                    android:textSize="17sp"
                    android:singleLine="true"/>
            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="15dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnMaterialChange"
                    android:layout_width="250dp"
                    android:layout_height="60dp"
                    android:text="자재교환 등록"
                    android:textSize="20sp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>


